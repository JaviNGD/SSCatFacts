<div class="flex flex-col items-center justify-center bg-white p-10 rounded-lg shadow-lg shadow-black max-w-md">
    
    <h1 class="text-3xl font-bold mb-6">SSCatFacts</h1>

    <% if !Current.user %>
        <p class="text-lg mb-4">Please login or sign up to see a cat fact</p>
        <div class="flex text-white font-bold mb-4">
            <p class="bg-blue-500 hover:bg-blue-700 py-2 px-4 rounded mr-8"><%= link_to "Login", new_session_path %></p>
            <p class="bg-blue-500 hover:bg-blue-700 py-2 px-4 rounded"><%= link_to "Sign in", new_user_path %></p>
        </div>
    <% else %>
        <p class="text-lg font-bold mb-2" >Welcome <%= Current.user.username %></p>
        <p class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-6"><%= link_to "See a Cat Fact", cat_facts_path %></p>    
        <p class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
            <%= link_to "Logout", session_path(Current.user.id), data: { turbo_method: :delete } %>
        </p>
    <% end %>

</div>
