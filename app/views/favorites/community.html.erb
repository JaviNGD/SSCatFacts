<h1 class="text-3xl font-bold mb-6">Community Favorites 🌟</h1>
<h2 class="text-xl font-bold mb-4">Top 3 Favorites 🏅</h2>

<% if @favorites.any? %>
    <ul class="text-left">
    <% @top_facts.each_with_index do |(fact, count), index| %>
        <li class="flex items-center justify-between border-b-2 border-gray-200 py-4 px-2">    
            <% medals = ["🥇", "🥈", "🥉"] %>
            <%= medals[index] %> 
            <p class="mx-4"><span class="font-bold">Fact #<%= fact.id %> </span><%= fact.fact %></p>
            <p class="text-center font-bold">💖 <%= count %></p>
        </li>
    <% end %>
    </ul>
<% else %>
    <p>No favorites yet. <%= link_to "Start adding some!", cat_facts_path, class: "text-blue-500 font-bold" %></p>
<% end %>

